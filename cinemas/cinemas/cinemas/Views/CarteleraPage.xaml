<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cinemas.Views.CarteleraPage">
    <ListView HasUnevenRows="True" x:Name="listPeliculas" ItemSelected="Pelicula_Selected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Margin="10">
                        <Image Source="{Binding Imagen}" WidthRequest="150" Aspect="AspectFit"/>
                        <StackLayout Orientation="Vertical">
                            <Label Text="Estreno: "/>
                            <Label Text="{Binding FechaEstreno}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical">
                            <Label Text="Genero: "/>
                            <Label Text="{Binding Genero}"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Recomendacion}"/>
                            <Label Text="{Binding Duracion}"/>
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>